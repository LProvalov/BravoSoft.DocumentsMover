<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Load Template" Click="MenuItemLoadTemplate_OnClick"></MenuItem>
                <MenuItem Header="Settings" Click="MenuItemSettings_OnClick"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Exit" Click="MenuItemExit_OnClick"></MenuItem>
            </MenuItem>
        </Menu>
        <DataGrid Grid.Row="1"
                  x:Name="TemplateDataGrid"
                  Background="WhiteSmoke" 
                  AutoGenerateColumns="False"
                  DataContext="{Binding TemplateDataGridModel}">
        </DataGrid>
    </Grid>
</Window>
